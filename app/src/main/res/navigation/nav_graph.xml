<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="net.bibbs.pilltracker.FirstFragment"
        android:label="Pills"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_HistoryFragment"
            app:destination="@id/HistoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="net.bibbs.pilltracker.SecondFragment"
        android:label="Add Pill"
        tools:layout="@layout/fragment_second" />
    <fragment
        android:id="@+id/HistoryFragment"
        android:name="net.bibbs.pilltracker.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history">
        <argument
            android:name="pillName"
            app:argType="string" />
    </fragment>
</navigation>